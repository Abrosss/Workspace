<body>
  <div class="container">
    <div class="left">
      <div class="header">
        <h2 class="animation a1">Welcome</h2>
        <h4 class="animation a2">Create your account</h4>
      </div>
      <div>
        <p><%= error %></p>
      </div>
      <form class="form" method="post" action="/users/register">
        <input type="username" class="form-field animation a3" placeholder="Username" name="username">
        <input type="password" class="form-field animation a4" placeholder="Password" name="password">
        <input type="password" class="form-field animation a4" placeholder="Confirm password" name="confirm_password">
        <button class="btn btn-dark">REGISTER</button>
      </form>
    </div>
    <div class="right"></div>
  </div>





